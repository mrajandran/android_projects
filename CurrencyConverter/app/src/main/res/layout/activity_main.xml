<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rajandrandesigns.rajandra.currencyconverter.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cv1"
        app:contentPadding="16dp"
        app:cardElevation="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="90dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/amt_usd"
            android:hint="Enter US Dollar Amount Here" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="16dp"
        android:id="@+id/cv3"
        app:cardElevation="6dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/cv1"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="263dp"
            app:srcCompat="@drawable/p4"
            android:id="@+id/img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:textAlignment="center"
            android:layout_marginTop="140dp"
            android:textSize="36sp" />

        <TextView
            android:text="EQUALS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equals"
            android:textAlignment="center"
            android:letterSpacing="1.5"
            android:layout_marginTop="90dp"
            android:alpha="0" />

        <TextView
            android:text="USD $45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entered"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:letterSpacing=".2"
            android:alpha="0"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button"

        android:text="C O N V E R T"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="clickFunction" />

</RelativeLayout>
